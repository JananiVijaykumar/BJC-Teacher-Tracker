<div style="margin-top: 55px;">
  <h1>Validate submitted forms here</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
      	<th scope="col"> Name </th>
      	<th scope="col"> School </th>
      	<th scope="col"> Email </th>
      	<th scope="col"> Location </th>
      	<th scope="col"> Website </th>
      	<th scope="col"> Snap </th>
      	<th scope="col"> Validate </th>
      	<th scope="col"> Delete </th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| %>
      <tr>
      	<td> <%= teacher.first_name + ' ' + teacher.last_name %> </td>
      	<td> <%= teacher.school.name %> </td>
      	<td> <%= teacher.email %> </td>
        <td> <%= teacher.school.city + ', ' + teacher.school.state %> </td>
        <td>
          <a href="<%= teacher.school.website %>">
            <%= teacher.school.website %>
          </a>
        </td>
        <td>
          <% if ['N/A', 'None', ''].include? teacher.snap %>
            <%= teacher.snap %>
          <% else %>
            <a href="https://snap.berkeley.edu/users?user=#<%= teacher.snap %>">
              <%= teacher.snap %>
            </a>
          <% end %>
        </td>
      	<td> <%= button_to("Validate", validate_path(:id => teacher.id), {class: 'btn btn-success'}) %> </td>
      	<td> <%= button_to("Delete", delete_path(:id => teacher.id), data: {confirm: "Are you sure you wish to delete this form?"}, class: 'btn btn-danger') %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-6">
    <h1>Course Statistics</h1>
    <table class="table">
      <thead class="thead-dark">
        <tr>
        <th scope="col"> Course </th> 
        <th scope="col"> Count </th> 
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |key, value| %>
        <tr>
          <td> <%= key %> </td>
          <td> <%= value %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-6">
    <h1>School Statistics</h1>
    <table class="table">
      <thead class="thead-dark">
        <tr>
        <th scope="col"> School </th> 
        <th scope="col"> City, State </th>
        <th scope="col"> Count </th> 
        </tr>
      </thead>
      <tbody>
        <% @schools.each do |school| %>
        <tr>
          <td>
            <a href="https:\/\/<%= school[0][3] %>">
              <%= school[0][0] %>
            </a>
          </td>
          <td> <%= school[0][1] + ', ' + school[0][2] %> </td>
          <td> <%= school[1] %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div id="map"></div>

<script>
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 39.50, lng: -98.35},
      zoom: 4
    });

    let markers = [];
    <% @items.each do |item| %>
      markers.push(new google.maps.Marker({
        position: new google.maps.LatLng(<%= item[:lat] %>, <%= item[:long] %>),
        map: map
      }))
    <% end %>
  }
</script>

<script async defer 
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC7jyOFHSorVb256ZEwvvyprp2KPjxKTPw&callback=initMap">
</script>

<div class="col-12">
  <h1>Validated Teacher Statistics</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col"> Name </th>
        <th scope="col"> Email </th>
        <th scope="col"> Course </th>
        <th scope="col"> Snap </th>
        <th scope="col"> Created </th>
      </tr>
    </thead>
    <tbody>
      <% @validated_teachers.each do |teacher| %>
      <tr>
        <td> <%= teacher[:first_name] + " " + teacher[:last_name] %> </td>
        <td> <%= teacher[:email] %> </td>
        <td> <%= teacher[:course] %> </td>
        <td> 
          <% if ['N/A', 'None', ''].include? teacher[:snap] %>
            <%= teacher[:snap] %>
          <% else %>
            <a href="https://snap.berkeley.edu/users?user=#<%= teacher[:snap] %>">
              <%= teacher[:snap] %>
            </a>
          <% end %>
        </td>
        <td> <%= teacher[:created_at].strftime("%d %b %Y") %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>